[
  {
    "name": "theme_info",
    "theme_name": "Tafra Streetwear",
    "theme_version": "1.0.0",
    "theme_author": "Tafra",
    "theme_documentation_url": "https://tafra.store/help",
    "theme_support_url": "https://tafra.store/support"
  },
  {
    "name": "t:general.typography",
    "settings": [
      {
        "type": "header",
        "content": "t:general.fonts"
      },
      {
        "type": "font_picker",
        "id": "type_heading_font",
        "default": "assistant_n7",
        "label": "Heading font"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "assistant_n4",
        "label": "Body font"
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 80,
        "max": 150,
        "step": 5,
        "unit": "%",
        "label": "Heading size scale",
        "default": 100
      },
      {
        "type": "range",
        "id": "body_scale",
        "min": 80,
        "max": 120,
        "step": 5,
        "unit": "%",
        "label": "Body size scale",
        "default": 100
      }
    ]
  },
  {
    "name": "t:general.colors",
    "settings": [
      {
        "type": "header",
        "content": "Primary Colors"
      },
      {
        "type": "color",
        "id": "color_background",
        "default": "#0A0A0A",
        "label": "Background"
      },
      {
        "type": "color",
        "id": "color_foreground",
        "default": "#FFFFFF",
        "label": "Text"
      },
      {
        "type": "header",
        "content": "Surface Colors"
      },
      {
        "type": "color",
        "id": "color_surface",
        "default": "#141414",
        "label": "Surface (cards, sections)"
      },
      {
        "type": "color",
        "id": "color_surface_elevated",
        "default": "#1C1C1C",
        "label": "Elevated surface (modals)"
      },
      {
        "type": "color",
        "id": "color_border",
        "default": "#2A2A2A",
        "label": "Border color"
      },
      {
        "type": "header",
        "content": "Accent Colors"
      },
      {
        "type": "color",
        "id": "color_accent",
        "default": "#FF3D00",
        "label": "Accent (buttons, links)"
      },
      {
        "type": "color",
        "id": "color_accent_foreground",
        "default": "#FFFFFF",
        "label": "Accent text"
      },
      {
        "type": "header",
        "content": "Text Colors"
      },
      {
        "type": "color",
        "id": "color_text_muted",
        "default": "#888888",
        "label": "Muted text"
      },
      {
        "type": "color",
        "id": "color_text_subtle",
        "default": "#666666",
        "label": "Subtle text"
      }
    ]
  },
  {
    "name": "t:general.layout",
    "settings": [
      {
        "type": "select",
        "id": "max_page_width",
        "label": "Page width",
        "options": [
          {
            "value": "1200px",
            "label": "Standard (1200px)"
          },
          {
            "value": "1400px",
            "label": "Wide (1400px)"
          },
          {
            "value": "1600px",
            "label": "Extra wide (1600px)"
          }
        ],
        "default": "1400px"
      },
      {
        "type": "range",
        "id": "min_page_margin",
        "min": 16,
        "max": 48,
        "step": 4,
        "unit": "px",
        "label": "Page margin",
        "default": 24
      },
      {
        "type": "range",
        "id": "section_spacing",
        "min": 24,
        "max": 120,
        "step": 8,
        "unit": "px",
        "label": "Section spacing",
        "default": 64
      },
      {
        "type": "range",
        "id": "border_radius",
        "min": 0,
        "max": 24,
        "step": 2,
        "unit": "px",
        "label": "Border radius",
        "default": 8
      }
    ]
  },
  {
    "name": "Buttons",
    "settings": [
      {
        "type": "range",
        "id": "button_border_radius",
        "min": 0,
        "max": 40,
        "step": 2,
        "unit": "px",
        "label": "Button border radius",
        "default": 4
      },
      {
        "type": "select",
        "id": "button_style",
        "label": "Primary button style",
        "options": [
          {
            "value": "solid",
            "label": "Solid"
          },
          {
            "value": "outline",
            "label": "Outline"
          }
        ],
        "default": "solid"
      }
    ]
  },
  {
    "name": "Animations",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_animations",
        "label": "Enable animations",
        "default": true
      },
      {
        "type": "select",
        "id": "animation_speed",
        "label": "Animation speed",
        "options": [
          {
            "value": "fast",
            "label": "Fast"
          },
          {
            "value": "normal",
            "label": "Normal"
          },
          {
            "value": "slow",
            "label": "Slow"
          }
        ],
        "default": "normal"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "label": "Cart type",
        "options": [
          {
            "value": "drawer",
            "label": "Drawer"
          },
          {
            "value": "page",
            "label": "Page"
          }
        ],
        "default": "drawer"
      },
      {
        "type": "checkbox",
        "id": "show_cart_note",
        "label": "Show cart note",
        "default": false
      }
    ]
  },
  {
    "name": "Social Media",
    "settings": [
      {
        "type": "header",
        "content": "Social accounts"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram",
        "info": "https://instagram.com/yourstore"
      },
      {
        "type": "text",
        "id": "social_tiktok_link",
        "label": "TikTok",

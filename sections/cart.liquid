{% comment %}
  Cart Page Section
  Full cart page layout
{% endcomment %}

<div class="cart-page">
  <h1 class="cart-page__title">Your Cart</h1>

  {% if cart.item_count > 0 %}
    <form action="{{ routes.cart_url }}" method="post" class="cart-page__form">
      <div class="cart-page__content">
        <!-- Items -->
        <div class="cart-page__items">
          <div class="cart-page__header hide-mobile">
            <span>Product</span>
            <span>Price</span>
            <span>Quantity</span>
            <span>Total</span>
          </div>

          {% for item in cart.items %}
            <div class="cart-page__item">
              <div class="cart-page__item-product">
                <a href="{{ item.url }}" class="cart-page__item-image">
                  {% if item.image %}
                    <img
                      src="{{ item.image | image_url: width: 200 }}"
                      alt="{{ item.title }}"
                      width="100"
                      height="125"
                      loading="lazy"
                    >
                  {% endif %}
                </a>
                <div class="cart-page__item-info">
                  <a href="{{ item.url }}" class="cart-page__item-title">{{ item.product.title }}</a>
                  {% unless item.variant.title == 'Default Title' %}
                    <p class="cart-page__item-variant">{{ item.variant.title }}</p>
                  {% endunless %}
                  <button
                    type="button"
                    class="cart-page__item-remove hide-desktop"
                    data-remove-item="{{ item.key }}"
                  >
                    Remove
                  </button>
                </div>
              </div>

              <div class="cart-page__item-price">
                {% if item.original_price > item.final_price %}
                  <span class="cart-page__price--sale">{{ item.final_price | money }}</span>
                  <span class="cart-page__price--compare">{{ item.original_price | money }}</span>
                {% else %}
                  {{ item.final_price | money }}
                {% endif %}
              </div>

              <div class="cart-page__item-quantity">
                <div class="cart-page__quantity-selector">
                  <button
                    type="button"
                    class="cart-page__quantity-btn"
                    data-quantity-change="{{ item.key }}"
                    data-quantity="{{ item.quantity | minus: 1 }}"
                    aria-label="Decrease quantity"
                  >
                    -
                  </button>
                  <input
                    type="number"
                    name="updates[{{ item.key }}]"
                    value="{{ item.quantity }}"
                    min="0"
                    class="cart-page__quantity-input"
                    aria-label="Quantity"
                  >
                  <button
                    type="button"
                    class="cart-page__quantity-btn"
                    data-quantity-change="{{ item.key }}"
                    data-quantity="{{ item.quantity | plus: 1 }}"
                    aria-label="Increase quantity"
                  >
                    +
                  </button>
                </div>
              </div>

              <div class="cart-page__item-total">
                {{ item.final_line_price | money }}
                <button
                  type="button"
                  class="cart-page__item-remove hide-mobile"
                  data-remove-item="{{ item.key }}"
                  aria-label="Remove"
                >
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                  </svg>
                </button>
              </div>
            </div>
          {% endfor %}
        </div>

        <!-- Summary -->
        <div class="cart-page__summary">
          <div class="cart-page__summary-inner">
            <h2 class="cart-page__summary-title">Order Summary</h2>

            <div class="cart-page__summary-row">
              <span>Subtotal</span>
              <span>{{ cart.total_price | money }}</span>
            </div>

            <div class="cart-page__summary-row cart-page__summary-shipping">
              <span>Shipping</span>
              <span>Calculated at checkout</span>
            </div>

            <div class="cart-page__summary-row cart-page__summary-total">
              <span>Total</span>
              <span>{{ cart.total_price | money }}</span>
            </div>

            <button type="submit" name="checkout" class="btn btn-primary btn-lg btn-full">Checkout</button>

            <a href="{{ routes.all_products_collection_url }}" class="cart-page__continue"> Continue Shopping </a>
          </div>
        </div>
      </div>
    </form>
  {% else %}
    <div class="cart-page__empty">
      <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
        <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
        <line x1="3" y1="6" x2="21" y2="6"></line>
        <path d="M16 10a4 4 0 0 1-8 0"></path>
      </svg>
      <h2>Your cart is empty</h2>
      <p>Looks like you haven't added anything to your cart yet.</p>
      <a href="{{ routes.all_products_collection_url }}" class="btn btn-primary btn-lg"> Start Shopping </a>
    </div>
  {% endif %}
</div>

{% stylesheet %}
  .cart-page {
    padding-bottom: var(--space-16);
  }

  .cart-page__title {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-8);
  }

  .cart-page__content {
    display: grid;
    grid-template-columns: 1fr 380px;
    gap: var(--space-8);
  }

  @media (max-width: 1024px) {
    .cart-page__content {
      grid-template-columns: 1fr;
    }
  }

  /* Items */
  .cart-page__header {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: var(--space-4);
    padding-bottom: var(--space-4);
    border-bottom: 1px solid var(--color-border);
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
  }

  .cart-page__item {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: var(--space-4);
    align-items: center;
    padding: var(--space-6) 0;
    border-bottom: 1px solid var(--color-border);
  }

  @media (max-width: 768px) {
    .cart-page__item {
      grid-template-columns: 1fr;
      gap: var(--space-3);
    }
  }

  .cart-page__item-product {
    display: flex;
    gap: var(--space-4);
  }

  .cart-page__item-image {
    flex-shrink: 0;
    width: 100px;
    aspect-ratio: 4/5;
    background-color: var(--color-surface);
    border-radius: var(--border-radius);
    overflow: hidden;
  }

  .cart-page__item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cart-page__item-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .cart-page__item-title {
    font-weight: 500;
    line-height: 1.3;
  }

  .cart-page__item-variant {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .cart-page__item-remove {
    background: none;
    border: none;
    color: var(--color-text-muted);
    font-size: var(--text-sm);
    text-decoration: underline;
    cursor: pointer;
    margin-top: auto;
    width: fit-content;
  }

  .cart-page__item-remove:hover {
    color: var(--color-error);
  }

  .cart-page__price--sale {
    color: var(--color-accent);
  }

  .cart-page__price--compare {
    text-decoration: line-through;
    color: var(--color-text-subtle);
    font-size: var(--text-sm);
  }

  .cart-page__quantity-selector {
    display: inline-flex;
    align-items: center;
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
  }

  .cart-page__quantity-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: none;
    border: none;
    color: var(--color-foreground);
    font-size: var(--text-lg);
    cursor: pointer;
  }

  .cart-page__quantity-btn:hover {
    color: var(--color-accent);
  }

  .cart-page__quantity-input {
    width: 50px;
    text-align: center;
    padding: 0;
    border: none;
    background: none;
    font-weight: 500;
    -moz-appearance: textfield;
    appearance: textfield;
  }

  .cart-page__quantity-input::-webkit-inner-spin-button,
  .cart-page__quantity-input::-webkit-outer-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  .cart-page__item-total {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-weight: 600;
  }

  /* Summary */
  .cart-page__summary {
    position: sticky;
    top: calc(var(--header-height) + var(--space-6));
    align-self: start;
  }

  .cart-page__summary-inner {
    background-color: var(--color-surface);
    border-radius: var(--border-radius);
    padding: var(--space-6);
  }

  .cart-page__summary-title {
    font-size: var(--text-lg);
    margin-bottom: var(--space-6);
    padding-bottom: var(--space-4);
    border-bottom: 1px solid var(--color-border);
  }

  .cart-page__summary-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: var(--space-3);
  }

  .cart-page__summary-shipping {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .cart-page__summary-total {
    font-size: var(--text-lg);
    font-weight: 600;
    margin-top: var(--space-4);
    padding-top: var(--space-4);
    border-top: 1px solid var(--color-border);
    margin-bottom: var(--space-6);
  }

  .cart-page__continue {
    display: block;
    text-align: center;
    margin-top: var(--space-4);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .cart-page__continue:hover {
    color: var(--color-accent);
  }

  /* Empty */
  .cart-page__empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: var(--space-16) var(--space-6);
  }

  .cart-page__empty svg {
    color: var(--color-text-subtle);
    margin-bottom: var(--space-6);
  }

  .cart-page__empty h2 {
    margin-bottom: var(--space-2);
  }

  .cart-page__empty p {
    color: var(--color-text-muted);
    margin-bottom: var(--space-8);
  }
{% endstylesheet %}

{% javascript %}
  // Quantity changes
  document.querySelectorAll('[data-quantity-change]').forEach((btn) => {
    btn.addEventListener('click', async () => {
      const key = btn.dataset.quantityChange;
      const quantity = parseInt(btn.dataset.quantity);

      btn.disabled = true;

      try {
        await fetch('/cart/change.js', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id: key, quantity }),
        });

        window.location.reload();
      } catch (error) {
        console.error('Error updating cart:', error);
        btn.disabled = false;
      }
    });
  });

  // Remove item
  document.querySelectorAll('[data-remove-item]').forEach((btn) => {
    btn.addEventListener('click', async () => {
      const key = btn.dataset.removeItem;

      btn.disabled = true;

      try {
        await fetch('/cart/change.js', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id: key, quantity: 0 }),
        });

        window.location.reload();
      } catch (error) {
        console.error('Error removing item:', error);
        btn.disabled = false;
      }
    });
  });
{% endjavascript %}


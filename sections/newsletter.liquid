{% comment %}
  Newsletter Section
  Full-width email signup section
{% endcomment %}

<section class="newsletter full-width">
  <div class="newsletter__background">
    {% if section.settings.background_image %}
      <img
        src="{{ section.settings.background_image | image_url: width: 1920 }}"
        alt=""
        width="{{ section.settings.background_image.width }}"
        height="{{ section.settings.background_image.height }}"
        loading="lazy"
        class="newsletter__bg-image"
      >
    {% endif %}
    <div class="newsletter__overlay"></div>
  </div>

  <div class="newsletter__content">
    {% if section.settings.heading != blank %}
      <h2 class="newsletter__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.text != blank %}
      <p class="newsletter__text">{{ section.settings.text }}</p>
    {% endif %}

    {% form 'customer', class: 'newsletter__form' %}
      <input type="hidden" name="contact[tags]" value="newsletter">
      <div class="newsletter__input-wrap">
        <input
          type="email"
          name="contact[email]"
          placeholder="{{ section.settings.placeholder }}"
          required
          autocomplete="email"
          class="newsletter__input"
        >
        <button type="submit" class="btn btn-primary newsletter__submit">
          {{ section.settings.button_label }}
        </button>
      </div>
      {% if form.posted_successfully? %}
        <p class="newsletter__success">Thanks for subscribing!</p>
      {% endif %}
      {% if form.errors %}
        <p class="newsletter__error">
          {{ form.errors.translated_fields.email | capitalize }}
          {{ form.errors.messages.email }}
        </p>
      {% endif %}
    {% endform %}

    {% if section.settings.show_privacy_text %}
      <p class="newsletter__privacy">{{ section.settings.privacy_text }}</p>
    {% endif %}
  </div>
</section>

{% stylesheet %}
  .newsletter {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 400px;
    padding: var(--space-16) var(--page-margin);
    text-align: center;
    overflow: hidden;
  }

  .newsletter__background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .newsletter__bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .newsletter__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(10, 10, 10, 0.9) 0%, rgba(10, 10, 10, 0.7) 100%);
  }

  .newsletter:not(:has(.newsletter__bg-image)) .newsletter__overlay {
    background: linear-gradient(135deg, var(--color-surface) 0%, var(--color-surface-elevated) 100%);
  }

  .newsletter__content {
    position: relative;
    z-index: 1;
    max-width: 600px;
  }

  .newsletter__heading {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-4);
  }

  .newsletter__text {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    margin-bottom: var(--space-8);
  }

  .newsletter__form {
    margin-bottom: var(--space-4);
  }

  .newsletter__input-wrap {
    display: flex;
    gap: var(--space-2);
    max-width: 480px;
    margin: 0 auto;
  }

  @media (max-width: 480px) {
    .newsletter__input-wrap {
      flex-direction: column;
    }
  }

  .newsletter__input {
    flex: 1;
    text-align: center;
  }

  .newsletter__submit {
    flex-shrink: 0;
  }

  .newsletter__success {
    color: var(--color-success);
    margin-top: var(--space-4);
  }

  .newsletter__error {
    color: var(--color-error);
    margin-top: var(--space-4);
  }

  .newsletter__privacy {
    font-size: var(--text-xs);
    color: var(--color-text-subtle);
    margin-top: var(--space-4);
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Newsletter",
  "tag": "section",
  "class": "newsletter-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Join the Movement"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Subscribe and get 10% off your first order, exclusive drops, and early access."
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Input placeholder",
      "default": "Enter your email"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Subscribe"
    },
    {
      "type": "checkbox",
      "id": "show_privacy_text",
      "label": "Show privacy text",
      "default": true
    },
    {
      "type": "text",
      "id": "privacy_text",
      "label": "Privacy text",
      "default": "By subscribing you agree to receive marketing emails."
    }
  ],
  "presets": [
    {
      "name": "Newsletter"
    }
  ]
}
{% endschema %}
